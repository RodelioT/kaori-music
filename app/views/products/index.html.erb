<h1>Products</h1>



<% @products.each do |product| %>
  <h2><%= link_to product.name, product %></h2>
  <p>
    <strong>Price:</strong>
    <%= number_to_currency(product.price)  %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= link_to product.category.name, product.category %>
  </p>
<% end %>

<%= paginate @products %>