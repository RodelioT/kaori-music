<h1>Checkout</h1>
<p>Subtotal: <%= number_to_currency(@subtotal) %></p>

<%= form_for @customer do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :email %>:
  <%= f.text_field :email %><br />

  <%= f.label :address %>:
  <%= f.text_field :address %><br />

  <%= f.label :city %>:
  <%= f.text_field :city %><br />

  <%= f.label :postalCode %>:
  <%= f.text_field :postalCode %><br />

  <%= f.label :province_id %>:
  <%= f.collection_select(:province_id, Province.all, :id, :name) %><br />

  <%= f.submit %>
<% end %>